import java.util.ArrayList; 
import java.util.List; 

interface Illness{
	public void treatment();	
  	public void describe();
}
abstract Infection implements Illness{
	public void cough();
}
abstract Cancer implements Illness{
	public void cry();
}
class Cold implements Infection{
  private void treatment(){
   	return "Hot tea";
  }	
  private void cough(){
   	return"Coughing...";
  }
  public void describe(){
    System.out.println( "Cold: treatment- " + this.treatment + "; action - " + this.cough);
  }    
}
class LungsCancer implements Cancer{
  private void treatment(){
   	return "Surgery";
  }	
  private void cry(){
   	return"Weep...";
  }
  public void describe(){
    System.out.println( "LungsCancer: treatment- " + this.treatment + "; action - " + this.cry);
  }    
}
class BrainCancer implements Cancer{
  private void treatment(){
   	return "Prays";
  }	
  private void cry(){
   	return"Praying...";
  }
  public void describe(){
    System.out.println( "LungsCancer: treatment- " + this.treatment + "; action - " + this.cry);
  }    
}
class Box {
	public List<Illness> box = new ArrayList<Illness>();
	public void Add(Illness ill){
		box.add(ill);
	}
	public void DrawAll(){
		for(Illness ill: box) {
			ill.describe();
		}
	}
}
public class Polymorphism
{
	public static void main(String[] args)
	{
		Box box = new Box();		
		Shape t = new Triangle();
		Shape c = new Circle();
		Shape s = new Square();	
			
		box.Add(t);
		box.Add(c);
		box.Add(s);
		box.DrawAll();
	}
}
