import java.util.ArrayList; 
import java.util.List; 

interface Illness{
	public String treatment();	
  	public void describe();
    public void listSymptoms();
}
abstract class IsCurable implements Illness{
    protected String treatment;
    protected List<String> symptoms;
}  
abstract class IsIncurable implements Illness{
    protected String inform;
    protected List<String> symptoms;
    abstract void informFamily();
} 
class Cold extends IsCurable{
  symptoms = new ArrayList<Illness>();
  public String treatment(){
   	return "Hot tea and pills";
  }	
  public void listSymptoms(){
     symptoms.add("Cough");
     symptoms.add("Fever");
   	 for(String s: symptoms) {
			System.out.print(s + ", ");
	 }
  }
  public void describe(){
    System.out.println( "Cold: symptoms - " + Cold.listSymptoms() + "; treatment- " + Cold.treatment());
  }    
}
class Appendicitis extends IsCurable{
  symptoms = new ArrayList<Illness>();
  public String treatment(){
   	return "Surgery";
  }	
  public void listSymptoms(){
     symptoms.add("Stomachache");
     symptoms.add("Intense pain");
   	 for(String s: symptoms) {
			System.out.print(s + ", ");
	 }
  }
  public void describe(){
    System.out.println( "Appendicitis: symptoms - " + Cold.listSymptoms() + "; treatment- " + Cold.treatment());
  }    
}
class LungsCancer extends IsIncurable{
    symptoms = new ArrayList<Illness>();
  	inform = "You've lungsCancer and its incurable ";
    public void listSymptoms(){
    	symptoms.add("Cough");
    	symptoms.add("Intense pain");
        symptoms.add("Blood in urine");
        symptoms.add("Hard breathing");
   		for(String s: symptoms) {
			System.out.print(s + ", ");
		}
  	public void informFamily(){
  		System.out.println( "Symptoms - " + LungsCancer.listSymptoms() + "; and- " + LungsCancer.inform());
	} 
}
class Hospital {
	public List<Illness> ills = new ArrayList<Illness>();
	public void Add(Illness newIll){
		ills.add(newIll);
	}
	public void DesribeAll(){
		for(Illness ill: ills) {
			ill.describe();
		}
	}
}
public class Polymorphism
{
	public static void main(String[] args)
	{
		Hospital hospital = new Hospital();		
		Illness c = new Cold();
		Illness l = new LungsCancer();
		Illness a = new Appendicitis();	
			
		hospital.Add(t);
		hospital.Add(c);
		hospital.Add(s);
		hospital.DesribeAll();
	}
}
