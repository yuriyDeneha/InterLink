import java.util.ArrayList; 
import java.util.List; 

interface Illness{
	public String treatment();	
  	public void describe();
    public void listSymptoms();
}
abstract class IsCurable implements Illness{
    protected String treatment;
    protected List<String> symptoms;
}  
abstract class IsIncurable implements Illness{
    protected String inform;
    protected List<String> symptoms;
    abstract void informFamily();
} 
class Cold extends IsCurable{
  symptoms = new ArrayList<Illness>();
  public String treatment(){
   	return "Hot tea and pills";
  }	
  public void listSymptoms(){
     symptoms.add("Cough");
     symptoms.add("Fever");
   	 for(String s: symptoms) {
			System.out.print(s + ", ");
	 }
  }
  public void describe(){
    System.out.println( "Cold: symptoms - " + Cold.listSymptoms() + "; treatment- " + Cold.treatment());
  }    
}
class Appendicitis extends IsCurable{
  public String treatment(){
   	return "Surgery";
  }	
  public void listSymptoms(){
     symptoms.add("Stomachache");
     symptoms.add("Intense pain");
   	 for(String s: symptoms) {
			System.out.print(s + ", ");
	 }
  }
  public void describe(){
    System.out.println( "Appendicitis: symptoms - " + Cold.listSymptoms() + "; treatment- " + Cold.treatment());
  }    
}
class BrainCancer extends Cancer{
  public String treatment(){
   	return "Prays";
  }	
  public String hope(){
   	return "Praying...";
  }
  public void describe(){
    System.out.println( "BrainCancer: treatment- " + this.treatment() + "; action - " + this.hope());
  }    
}
class Box {
	public List<Illness> box = new ArrayList<Illness>();
	public void Add(Illness ill){
		box.add(ill);
	}
	public void DesribeAll(){
		for(Illness ill: box) {
			ill.describe();
		}
	}
}
public class Polymorphism
{
	public static void main(String[] args)
	{
		Box box = new Box();		
		Illness t = new Cold();
		Illness c = new LungsCancer();
		Illness s = new BrainCancer();	
			
		box.Add(t);
		box.Add(c);
		box.Add(s);
		box.DesribeAll();
	/* Output
	Cold: treatment- Hot tea; action - Coughing...
	LungsCancer: treatment- Surgery; action - Weep...
 	BrainCancer: treatment- Prays; action - Praying...
	*/
	}
}
